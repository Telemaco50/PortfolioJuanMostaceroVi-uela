{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" // Asegúrate de que coincida con la carpeta de salida de Vite
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dist/$1", // Sirve los archivos desde la carpeta `dist`
      "headers": {
        "Content-Type": "application/javascript" // Fuerza el tipo MIME correcto
      }
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable" // Cachea archivos estáticos
      }
    }
  ],
  "github": {
    "silent": true
  },
  "build": {
    "env": {
      "NPM_RC": "legacy-peer-deps=true"
    }
  }
}
